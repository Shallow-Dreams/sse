int main()
{
  	int x,y;
  	double area,s;
  	printf("Input m:");
  	scanf("%d",&x);
  	
	if(x>0)
	{
		if(x%2==1)
	  {
	 
	  		printf("%d is a positive odd\n",x);	
	  }
	  else 
	  {
	  	
	  		printf("%d is a positive even\n",x);	
	  }
	}
	else if (x<0)
	{
		if(x%2==-1)
	  {
	 
	  		printf("%d is a negative odd\n",x);	
	  }
	  else 
	  {
	  	
	  		printf("%d is a negative even\n",x);	
	  }
	}
	  else
	  {
	  	
	  		printf("%d is zero. It is an even\n",x);	
	  }
	
	
	  
    return 0;
}
