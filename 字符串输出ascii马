#include  <stdio.h>
#define N 40
#include <string.h>
#include <time.h>
#include <stdlib.h>

int main()
{
	char a[N],i,k,x;
	printf("Input a string:\n");
	gets(a);
	k=0;
    for(i=1;a[i]!='\0';i++)
    {
    	
    	if(a[k]<a[i])
    	k=i;
    	
	}

	printf("The largest character of \"%s\" is \'%c\' ,The ASCII is %d.",a,a[k],a[k]);
    return 0;

}


